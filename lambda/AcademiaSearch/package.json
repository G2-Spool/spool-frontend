{
  "name": "academia-search-lambda",
  "version": "1.0.0",
  "description": "Lambda function for academic topic analysis and vector search",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --project .",
    "package": "npm run build && zip -r academia-search.zip dist/ node_modules/",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "deploy": "aws lambda update-function-code --function-name AcademiaSearch --zip-file fileb://academia-search.zip"
  },
  "dependencies": {
    "@pinecone-database/pinecone": "^2.0.0",
    "openai": "^4.26.0",
    "aws-sdk": "^2.1529.0",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.131",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}